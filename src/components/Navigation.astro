---
import Link from "@/components/Link.astro";
---

<section class="navigation">
  <nav class="navigation__content">
    <span class="navigation__logo">sidekiq</span>
    <ul class="navigation__links">
      <li class="navigation__link">
        <Link href="#benefits" variant="flat">Benefícios</Link>
      </li>
      <li class="navigation__link">
        <Link href="#services" variant="flat">Serviços</Link>
      </li>
      <li class="navigation__link">
        <Link href="#process" variant="flat">Processo</Link>
      </li>
      <li class="navigation__link">
        <Link href="#plans" variant="flat">Planos</Link>
      </li>
    </ul>
    <Link href="#" variant="solid">Agendar Meeting</Link>
  </nav>
</section>

<style>
  .navigation {
    padding-block: 2rem;
  }

  .navigation__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: var(--color-surface-background-subtle);
    border: 1px solid var(--color-surface-border-subtle);
    border-radius: 2rem;
    padding-block: 0.5rem;
    padding-inline: 1rem 0.5rem;
    backdrop-filter: blur(16px);
  }

  .navigation__links {
    display: none;
    gap: 3rem;
  }

  .navigation__logo {
    font-size: var(--font-body-size-large);
    font-weight: 600;
  }

  @media (min-width: 960px) {
    .navigation__content {
      background-color: transparent;
      backdrop-filter: none;
      border: none;
      padding-block: 0;
      padding-inline: 0;
      border-radius: 0;
    }

    .navigation__links {
      display: flex;
    }

    .navigation__logo {
      font-size: var(--font-body-size-larger);
    }
  }
</style>
