---
import Link from "@/components/Link.astro";
import NavigationList from "./NavigationList.astro";
---

<section class="navigation">
  <nav class="navigation__content">
    <span class="navigation__logo">sidekiq</span>
    <NavigationList />
    <Link href="#" variant="solid" context="brand">Agendar Sess√£o</Link>
  </nav>
</section>

<style>
  .navigation {
    padding-block: 2rem;
  }

  .navigation__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: var(--color-background-subtle);
    border: 1px solid var(--color-border-subtle);
    border-radius: 2rem;
    padding-block: 0.5rem;
    padding-inline: 1rem 0.5rem;
    backdrop-filter: blur(16px);
  }

  .navigation__logo {
    font-size: var(--font-body-size-large);
    font-weight: 600;
  }

  @media (min-width: 960px) {
    .navigation__content {
      background-color: transparent;
      backdrop-filter: none;
      border: none;
      padding-block: 0;
      padding-inline: 0;
      border-radius: 0;
    }

    .navigation__logo {
      font-size: var(--font-body-size-larger);
    }
  }
</style>
