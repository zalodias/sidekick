---
import Card from "@/components/Card.astro";
import Link from "@/components/Link.astro";
import type { Service } from "@/data/services";
import { Icon } from "astro-icon/components";
const { title, description, action } = Astro.props as Service;
---

<Card class="services-card">
  <div class="services-card__icon">
    <Icon name="check" />
  </div>
  <div class="services-card__content">
    <h2 class="services-card__title">{title}</h2>
    <p class="services-card__description">
      {description}
    </p>
  </div>
  {
    action && (
      <Link
        context="brand"
        href="#"
        iconTrailing="arrow-up-right"
        variant="flat"
      >
        {action}
      </Link>
    )
  }
</Card>

<style>
  .services-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .services-card__content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .services-card__description {
    color: var(--color-foreground-subtle);
  }

  .services-card__icon {
    width: fit-content;
    padding: 0.5rem;
    border-radius: 0.5rem;
    background-color: hsl(from var(--color-background-brand) h s l / 8%);
    color: var(--color-foreground-brand);
  }

  .services-card__title {
    font-size: var(--font-body-size-large);
    font-weight: 600;
  }
</style>
