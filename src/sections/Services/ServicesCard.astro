---
import { Icon } from "astro-icon/components";
import Link from "../../components/Link.astro";

interface Props {
  action?: string;
  description: string;
  title: string;
}

const { action, description, title } = Astro.props;
---

<article class="card">
  <div class="card__icon">
    <Icon name="check" />
  </div>
  <div class="card__content">
    <h2 class="card__title">{title}</h2>
    <p class="card__description">
      {description}
    </p>
  </div>
  {
    action && (
      <Link
        context="brand"
        href="#"
        iconTrailing="arrow-up-right"
        variant="flat"
      >
        {action}
      </Link>
    )
  }
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background-color: var(--color-background-default);
    border: 1px solid var(--color-border-subtle);
    box-shadow: 0px 1px 2px var(--color-border-subtle);
    border-radius: 0.75rem;
  }

  .card__content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .card__description {
    color: var(--color-foreground-subtle);
  }

  .card__icon {
    width: fit-content;
    padding: 0.5rem;
    border-radius: 0.5rem;
    background-color: hsl(from var(--color-background-brand) h s l / 8%);
    color: var(--color-foregrund-brand);
  }

  .card__title {
    font-size: var(--font-body-size-large);
    font-weight: 600;
  }
</style>
